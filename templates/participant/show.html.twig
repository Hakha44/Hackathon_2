{% extends 'base.html.twig' %}

{% block title %}Participant{% endblock %}

{% block body %}
    <h1>Participant</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom de l'entreprise ( optionnel )</th>
                <td>{{ participant.entrepriseName }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ participant.name }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ participant.firstname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ participant.email }}</td>
            </tr>
            <tr>
                <th>Numéro de téléphone</th>
                <td>{{ participant.phoneNumber }}</td>
            </tr>
            <tr>
                <th>Qualité</th>
                <td>{{ participant.quality ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('participant_index') }}" class="button">retour</a>

    <a href="{{ path('participant_edit', {'id': participant.id}) }}" class="button">Edition</a>

    {{ include('participant/_delete_form.html.twig') }}
{% endblock %}
