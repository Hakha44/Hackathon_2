{% extends 'base.html.twig' %}

{% block title %}Participant index{% endblock %}

{% block body %}
    <h1> Accueil Participant</h1>
    <div class="row justify-content-center">
        <p><a href="{{ path('participant_new') }}" class="buttonCreate"><i class="fas fa-marker"></i>Créer un participant</a></p>
    </div>

    {% include 'upload/index.html.twig' %}
    <table class="table">
        <thead>
        <tr>
            <th>Nom de l'entreprise</th>
            <th>Nom</th>
            <th>Prénom</th>
            <th>Email</th>
            <th>Numéro de Téléphone</th>
            <th>Présent</th>
            <th>Partenaire</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for participant in participants %}
            <tr>
                <td>{{ participant.entrepriseName }}</td>
                <td>{{ participant.name }}</td>
                <td>{{ participant.firstname }}</td>
                <td>{{ participant.email }}</td>
                <td>{{ participant.phoneNumber }}</td>
                <td>
                    <label class="switch">
                        <input type="checkbox" {{ participant.present ? "" : "checked" }}>
                        <span class="slider round"></span>
                    </label>
                <td>{{ participant.quality ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('participant_show', {'id': participant.id}) }}" class="button">Détail</a>
                    <a href="{{ path('participant_edit', {'id': participant.id}) }}" class="button">Éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Aucun participant enregistré</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
