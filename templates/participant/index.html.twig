{% extends 'base.html.twig' %}

{% block title %}Participant index{% endblock %}

{% block body %}
    <h1> Accueil Participant</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom de l'entreprise</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Email</th>
                <th>Numéro de Téléphone</th>
                <th>Qualité</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for participant in participants %}
            <tr>
                <td>{{ participant.id }}</td>
                <td>{{ participant.entrepriseName }}</td>
                <td>{{ participant.name }}</td>
                <td>{{ participant.firstname }}</td>
                <td>{{ participant.email }}</td>
                <td>{{ participant.phoneNumber }}</td>
                <td>{{ participant.quality ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('participant_show', {'id': participant.id}) }}">Détail</a>
                    <a href="{{ path('participant_edit', {'id': participant.id}) }}">Éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Aucun participant enregistré </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('participant_new') }}">Créer un nouveau participant</a>
{% endblock %}
