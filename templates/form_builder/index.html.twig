{% extends 'base.html.twig' %}

{% block title %}Liste des formulaires existants{% endblock %}

{% block body %}

    <div class="row">
        <h1>Liste des formulaires existants</h1>
    </div>
    <hr class="style" />
    <div class="row justify-content-center">
        <a class="btn buttonCreate" href="{{ path('form_builder_new') }}">Cr√©er un nouveau formulaire</a>
    </div>

    <div class="container">
        <table class="table">
            <thead>
            <tr>
                <th>Nom court</th>
                <th>Titre</th>
                <th>Message</th>
                <th>-</th>
            </tr>
            </thead>
            <tbody>
            {% for form_builder in form_builders %}
                <tr class="text-center">
                    <td>{{ form_builder.name }}</td>
                    <td>{{ form_builder.headerForm }}</td>
                    <td>{{ form_builder.paragraph }}</td>
                    <td class="btn-group">
                        <a href="{{ path('form_builder_show', {'id': form_builder.id}) }}" class="button"><i
                                    class="fas fa-list"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucun formulaire</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
