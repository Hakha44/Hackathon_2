{% extends 'base.html.twig' %}

{% block title %}Visualisation{% endblock %}

{% block body %}
    <h1>Visualisation</h1>
    <div class="row">
        <div class="col text-right">
            <a class="btn button" href="{{ path('form_builder_index') }}">Retour</a>
        </div>
    </div>

    <table class="table">
        <tbody>
        <tr>
            <th>Name</th>
            <td>{{ form_builder.name }}</td>
        </tr>
        <tr>
            <th>HeaderForm</th>
            <td>{{ form_builder.headerForm }}</td>
        </tr>
        <tr>
            <th>Paragraph</th>
            <td>{{ form_builder.paragraph }}</td>
        </tr>
        <tr>
            <th></th>
            <td>{{ form_builder.formbuilderhtml|raw }}</td>
        </tr>
        </tbody>
    </table>

    <div class="row">
        <div class="col text-right">
            {{ include('form_builder/_delete_form.html.twig') }}
        </div>
    </div>


{% endblock %}
